<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/linear_venture_list"
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/white"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사업명"
                    android:textSize="18dp"
                    android:textColor="#222222"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/linear_percent_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/host"
                        android:layout_width="97dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:text="기업명" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/business_dday"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:background="#ff4411"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="D-25"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressTint="#f3acb1"
                    android:id="@+id/progress"
                    android:max="100"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="0 %"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"></View>

                    <TextView
                        android:id="@+id/fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="0 마일리지"
                        android:textSize="15dp"
                        android:textColor="#222222" />
                </LinearLayout>

                <Button
                    android:id="@+id/donation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="응원하기"
                    android:textColor="#ffffff"
                    android:background="@drawable/design_venture_button2"/>

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_success"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/cardview_success"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/img_fail"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="10dp"
        android:src="@drawable/cardview_fail"
        android:visibility="invisible" />

</FrameLayout>

